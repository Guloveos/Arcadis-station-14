<controls:FancyWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="{Loc 'comms-console-menu-title'}"
               MinSize="500 10">
    <BoxContainer Orientation="Vertical">
        <Label Text="{Loc 'comms-console-window-text'}" />
        <BoxContainer Orientation="Horizontal" Margin="5 5 5 10">
            <LineEdit Name="ReasonBox" HorizontalExpand="True" />
            <Button Name="ReasonBoxEnter" Text="{Loc 'comms-console-menu-call-shuttle'}" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
