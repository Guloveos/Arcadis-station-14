<cc:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    Title="{Loc 'character-info-title'}"
    MinWidth="400"
    MinHeight="545">
    <BoxContainer
        VerticalExpand="True"
        HorizontalExpand="True"
        SeparationOverride="5"
        Orientation="Horizontal">
        <BoxContainer Name="LeftPanel"
                      Orientation="Vertical"
                      VerticalExpand="True"
                      HorizontalExpand="True"
                      SeparationOverride="5">
            <PanelContainer
                Name="SpritePanel">
                <PanelContainer.PanelOverride>
                    <graphics:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>
                <BoxContainer
                    Orientation="Horizontal">
                    <SpriteView Name="SpriteView" Access="Public"/>
                    <BoxContainer Orientation="Vertical">
                        <RichTextLabel Name="NameLabel" Access="Public"/>
                        <RichTextLabel Name="SubTextLabel" Access="Public"/>
                    </BoxContainer>
                </BoxContainer>
            </PanelContainer>
            <ScrollContainer
                Name="BriefingContainer"
                Access="Public"
                HScrollEnabled="False">

            </ScrollContainer>
        </BoxContainer>
        <BoxContainer Name="ObjectivesPanel"
                      Orientation="Vertical">
            <ScrollContainer
                Name="ObjectivesContainer"
                Access="Public"
                HScrollEnabled="False">

            </ScrollContainer>
        </BoxContainer>
    </BoxContainer>
</cc:FancyWindow>
