<Control xmlns="https://spacestation14.io"
         xmlns:pt="clr-namespace:Content.Client.Administration.UI.Tabs.PlayerTab"
         xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
         xmlns:co="clr-namespace:Content.Client.UserInterface.Controls">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Name="PlayerCount" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                   Text="{Loc Player Count}"/>
            <LineEdit Name="SearchLineEdit" HorizontalExpand="True" SizeFlagsStretchRatio="2"
                      PlaceHolder="{Loc player-tab-filter-line-edit-placeholder}" />
            <Button Name="ShowDisconnectedButton" HorizontalExpand="True" SizeFlagsStretchRatio="2"
                    Text="{Loc player-tab-show-disconnected}" ToggleMode="True"/>
            <Button Name="OverlayButton" HorizontalExpand="True" SizeFlagsStretchRatio="2"
                    Text="{Loc player-tab-overlay}" ToggleMode="True"/>
        </BoxContainer>
        <Control MinSize="0 5"/>
        <pt:PlayerTabHeader Name="ListHeader"/>
        <cc:HSeparator/>
        <co:SearchListContainer Name="SearchList" Access="Public" VerticalExpand="True"/>
    </BoxContainer>
</Control>
